{
  "permissions": {
    "allow": [
      "WebFetch(domain:docs.anthropic.com)",
      "Bash(gh issue list:*)",
      "Bash(git worktree:*)"
    ],
    "deny": []
  },
  "statusLine": {
    "type": "command",
    "command": "node $CLAUDE_PROJECT_DIR/sessions/statusline.js"
  },
  "hooks": {
    "SessionStart": [
      {
        "matcher": "startup|resume",
        "hooks": [
          {
            "type": "command",
            "command": "node \"$CLAUDE_PROJECT_DIR/.claude/hooks/session-start-rtiac.js\""
          }
        ]
      }
    ]
  }
}
